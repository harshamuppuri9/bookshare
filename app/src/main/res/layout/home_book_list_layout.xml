<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:padding="5dp"
    android:background="@drawable/booklist_image_background"
    >
    <ImageView
        android:id="@+id/homePage_image"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:contentDescription="Book Image"
        android:background="#E1E1E1"
        android:scaleType="fitXY"
        />
    <View
        android:id="@+id/image_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/homePage_image"
        android:background="#E8E6E6"/>

    <LinearLayout
        android:id="@+id/home_page_bookDetails"
        android:orientation="vertical"
        android:layout_below="@id/image_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        >
        <TextView
            android:id="@+id/homePage_bookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#545353"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Book Name"
            />
        <TextView
            android:id="@+id/homePage_bookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#545353"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Book Author"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>
</RelativeLayout>